<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Manuals</name>
  <summary>Read developer documentation</summary>
  <description>
    <p>
      Manuals indexes your developer manuals and provides robust browsing
      and searching capabilities.
    </p>
    <p>
      It supports the devhelp documentation format used by many libraries
      integrating with the GTK platform.
    </p>
  </description>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translatable="no">Christian Hergert</developer_name>
  <url type="homepage">https://gitlab.gnome.org/chergert/manuals</url>
  <url type="bugtracker">https://gitlab.gnome.org/chergert/manuals/issues</url>
  <url type="translate">https://gitlab.gnome.org/chergert/manuals/-/tree/main/po</url>
  <url type="vcs-browser">https://gitlab.gnome.org/chergert/manuals</url>

  <update_contact>chergert@gnome.org</update_contact>
  <translation type="gettext">manuals</translation>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#c061cb</color>
    <color type="primary" scheme_preference="dark">#813d9c</color>
  </branding>

